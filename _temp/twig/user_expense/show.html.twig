{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block body %}
    <h1>Expense</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expense.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ expense.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ expense.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ expense.description }}</td>
            </tr>
            <tr>
                <th>TotalCost</th>
                <td>{{ expense.totalCost }}</td>
            </tr>
            <tr>
                <th>TotalPaid</th>
                <td>{{ expense.totalPaid }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ expense.createdAt ? expense.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ expense.updatedAt ? expense.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_expense_index') }}">back to list</a>

    <a href="{{ path('app_user_expense_edit', {'id': expense.id}) }}">edit</a>

    {{ include('user_expense/_delete_form.html.twig') }}
{% endblock %}
