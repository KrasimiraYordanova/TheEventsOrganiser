{% extends 'base.html.twig' %}

{% block title %}Rdv index{% endblock %}

{% block body %}
    <h1>Rdv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Date</th>
                <th>Time</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rdv in rdvs %}
            <tr>
                <td>{{ rdv.id }}</td>
                <td>{{ rdv.description }}</td>
                <td>{{ rdv.slug }}</td>
                <td>{{ rdv.date ? rdv.date|date('Y-m-d') : '' }}</td>
                <td>{{ rdv.time ? rdv.time|date('H:i:s') : '' }}</td>
                <td>{{ rdv.createdAt ? rdv.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rdv.updatedAt ? rdv.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_rdv_show', {'id': rdv.id}) }}">show</a>
                    <a href="{{ path('app_user_rdv_edit', {'id': rdv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_rdv_new') }}">Create new</a>
{% endblock %}
