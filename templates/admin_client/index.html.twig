{% extends 'admin.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
        <div class="container-fluid">

		<div class="header-flex marginTop">
			<h1 class="primary">Client list</h1>
			<a class="button" href="{{ path('app_admin_client_new') }}">Create new</a>
		</div>

		<div class="table-container">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postale</th>
                <th>Pays</th>
                <th>Utilisateur Id</th>
                {# <th>actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.city }}</td>
                <td>{{ client.zipCode }}</td>
                <td>{{ client.country }}</td>
                <td>
                <a href="{{ path('app_admin_user_show', {'id': client.user.id}) }}">
                {{ client.user.id}}</a>
                </td>
                {# <td class="actionButtons-flex">
                    <a href="{{ path('app_admin_client_show', {'id': client.id}) }}"><i class="fa-solid fa-pen"></i></a>
                    {{ include('admin_client/_delete_form.html.twig') }}
                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucun donnés trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
	</div>

    
{% endblock %}
