{% extends 'admin.html.twig' %}

{% block title %}Event Type
{% endblock %}

{% block body %}

	<div class="container">

		<div class="header-flex marginTop">
			<h1 class="primary">Event Type list</h1>
			<a class="button" href="{{ path('app_admin_eventtype_new') }}">Create new</a>
		</div>

		<div class="table-container">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Slug</th>
						<th>CreatedAt</th>
						<th>UpdatedAt</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for event_type in event_types %}
						<tr>
							<td>{{ event_type.id }}</td>
							<td>{{ event_type.name }}</td>
							<td>{{ event_type.slug }}</td>
							<td>{{ event_type.createdAt ? event_type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ event_type.updatedAt ? event_type.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td
								class="actionButtons-flex">
								{# <a href="{{ path('app_admin_eventtype_show', {'id': event_type.id}) }}">show</a> #}
								<a href="{{ path('app_admin_eventtype_edit', {'id': event_type.id}) }}">
									<i class="fa-solid fa-pen"></i>
								</a>
								{{ include('admin_eventtype/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}