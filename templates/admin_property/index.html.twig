{% extends 'admin.html.twig' %}

{% block title %}Property index{% endblock %}

{% block body %}

<div class="container">

<div class="header-flex marginTop">
    <h1 class="primary">Property</h1>
    <a class="button" href="{{ path('app_admin_property_new') }}">Create new</a>
    </div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type de data</th>
                <th>Id type d'évenement</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for property in properties %}
            <tr>
                <td>{{ property.id }}</td>
                <td>{{ property.name }}</td>
                <td>{{ property.dataType }}</td>
                <td>{{ property.eventType.id }}</td>
                <td>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ property.updatedAt ? property.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="actionButtons-flex">
                    {# <a href="{{ path('app_admin_property_show', {'id': property.id}) }}">show</a> #}
                    <a href="{{ path('app_admin_property_edit', {'id': property.id}) }}"><i class="fa-solid fa-pen"></i></a>
                    {{ include('admin_property/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    
    </div>
{% endblock %}
