{% extends 'admin.html.twig' %}

{% block title %}Users
{% endblock %}

{% block body %}
	<div class="container-fluid">

		<div class="header-flex marginTop">
			<h1 class="primary">User list</h1>
			<a class="button" href="{{ path('app_admin_user_new') }}">Create new</a>
		</div>

		<div class="table-container">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Email</th>
						<th>Roles</th>
						<th>Password</th>
						<th>Firstname</th>
						<th>Lastname</th>
						<th>Image</th>
						<th>IsValid</th>
						<th>IsVerified</th>
						<th>CreatedAt</th>
						<th>UpdatedAt</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.password }}</td>
							<td>{{ user.firstname }}</td>
							<td>{{ user.lastname }}</td>
							<td>{{ user.image }}</td>
							<td>{{ user.isValid ? 'Yes' : 'No' }}</td>
							<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
							<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td class="actionButtons-flex">
								{# <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a> #}
								<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen"></i></a>
                                {{ include('admin_user/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="11">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
