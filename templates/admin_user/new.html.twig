{% extends 'admin.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}New User
{% endblock %}

{% block body %}

	<div class="container">

		<div class="marginTop">
			<h1 class="primary">Create new User</h1>
		</div>

		{{ form_start(form, {'attr': {'class': 'table-container'}}) }}
		<div class="error-message">
			{{ form_errors(form, {'attr': {'class': 'error-input'}}) }}
		</div>

		{{ form_row(form.firstname) }}
		{{ form_row(form.lastname) }}
		{{ form_row(form.plainPassword) }}
		{{ form_row(form.roles) }}
		{{ form_row(form.isValid) }}
		{{ form_row(form.isValid) }}
		{% for row in form.client %}
			{{ form_row(row)}}
		{% endfor %}
		<button class="button">{{ button_label|default('Save') }}</button>
		<a class="button" href="{{ path('app_admin_user_index') }}">Dismiss</a>
		{{ form_end(form) }}


	</div>
{% endblock %}
