{% extends 'userbase.html.twig' %}

{% block title %}Checklist{% endblock %}

{% block body %}

	<section class="dashboard-container">
		<div class="items-container">

		    <div class="items-container__item-space">
                <h2 class="items-container__item-title">Checklist</h2>
                <div class="items-container__items">
                    <h3 class="items-container__item">Tasks completed: {{ checked.check }}</h3>
                    <h3 class="items-container__item">Tasks remaining: {{ unchecked.uncheck }}</h3>
                </div>
            </div>

		    <div class="bkgrnd-block">
    
		    	{% for checklist in checklists %}
    
		    	    <div class="items-container__bkgrnd-block items-container__flex">
                        <div class="items-container__item-info">
                            <p class="item-parag">{{ checklist.description }}</p>
                            <div class="items-container__action-buttons">
                                <p class="items-container__p"><a class="items-container__a items-container__a--1" href="{{ path('app_user_checklist_edit', {'eventSlug': eventList.eventSlug, 'checklist_id': checklist.id}) }}"><i class="icon fa-solid fa-pen"></i></a></p>
                                <p class="items-container__p">{{ include('user_checklist/_delete_form.html.twig') }}</p>
                            </div>
                        </div>
                    </div>
    
		    	{% else %}
		    		<p>no registered tasks</p>
		    	{% endfor %}
				
		    </div>
		    <a href="{{ path('app_user_checklist_new', {'eventSlug': eventList.eventSlug}) }}" class="btn btn-item">Add a task</a>
	   </div>
	</section>
{% endblock %}
