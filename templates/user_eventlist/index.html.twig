{% extends 'base.html.twig' %}

{% block title %}Events List{% endblock %}

{% block body %}

    <div class="dashboard-center-container">
        <a href="{{ path('app_maindashboard') }}" class="back-dashboard">Retour au dashboard</a>
        <h1 class="dashboard-title">My Event Planner</h1>
        <div class="bkgrnd-block">
                    <h2 class="dashboard-secondary">Liste de tous mes événements</h2>
                    {% for event_list in event_lists %}
                    <div class="item-list">
                        <div class="item-list-single">
                            <p class="eitem-parag"><a class="eitem-parag-link" href="{{ path('app_user_eventdashboard', {id: event_list.id}) }}">{{ event_list.eventName }}</a></p>
                            <p class="eitem-parag">{{ event_list.eventDate ? event_list.eventDate|date('Y-m-d') : '' }}</p>
                            <p class="eitem-parag">{{ event_list.eventBudget |format_currency('EUR') }}</p>
                            <p class="eitem-parag">{{ event_list.eventLocation }}</p>
                            
                            <div class="eitem-parag eimage-box">
                            <img class="event-image" src="{{ asset('uploads/eventImage/'~ event_list.image )}}">
                            </div>
                            <div class="action-buttons">
                                {# <p><a href="{{ path('app_user_eventlist_edit', {'id': event_list.id}) }}">
									<i class="icon fa-solid fa-pen"></i></a></p> #}
                                <p>{{ include('user_eventlist/_delete_form.html.twig') }}</p>
                            </div>
                        </div>
                    </div>
                             {% else %}
                             <p>no records found</p>
                             {% endfor %}
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}
