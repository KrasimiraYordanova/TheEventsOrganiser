{% extends 'userbase.html.twig' %}

{% block title %}{% if edit %}Edit{% else %}New{% endif %} guest{% endblock %}

{% block body %}

	<section class="form-container">
            <div class="form-container__square">
                <h3 class="dashboard-tertiary form-container__title">{% if edit %}Edit{% else %}Invite{% endif %} guest</h3>
                <div class="form__bkgrnd-block">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                        <div class="form__items">
							{{ form_label(form.name, null, {'label_attr': {'class': 'form__label'}}) }}
							{{ form_widget(form.name, {'attr': {'class': 'form__input form__input--text'}} ) }}

                            <div class="form__guest-container">
                                <div class="form__guest">
                                   {{ form_row(form.rdsvp) }}
                                </div>
        
                                <div class="form__guest">
                                    {{ form_row(form.diet) }}
                                </div>
        
                                <div class="form__guest">
                                    {{ form_row(form.tabletab) }}
                                </div>
                            </div>
                            

							{{ form_label(form.email, null, {'label_attr': {'class': 'form__label'}}) }}
							{{ form_widget(form.email, {'attr': {'class': 'form__input form__input--text'}}) }}
							{{ form_label(form.phone, null, {'label_attr': {'class': 'form__label'}}) }}
							{{ form_widget(form.phone, {'attr': {'class': 'form__input form__input--text'}}) }}
							{{ form_label(form.address, null, {'label_attr': {'class': 'form__label'}}) }}
							{{ form_widget(form.address, {'attr': {'class': 'form__input form__input--text'}}) }}
                        </div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form__actions">
                            <button class="btn form__button-i btn-save">{{ button_label|default('Save') }}</button>
                            <a href="{{ path('app_user_guest_index', {'eventSlug': eventList.eventSlug}) }}" class="form__return">&larr; back</a>
						</div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>

{% endblock %}

