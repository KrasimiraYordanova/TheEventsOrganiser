{% extends 'userbase.html.twig' %}

{% block title %}Tabletab index
{% endblock %}

{% block body %}

	<div class="dashboard-center-container">
		<div class="item-border">
			<h2 class="item-title">Table</h2>
			<div class="item-summery">
				<h3 class="item-count">Nombre de tables:
					{{tableCount['numberTables']}}
				</h3>
			</div>
		</div>

		<div class="bkgrnd-block">
			<div class="table-list">
				{% for tabletab in tabletabs %}
					<div class="item-list">
						<div class="item-list-single">
							<p class="item-parag underline">{{ tabletab.name}}</p>
							<div class="action-buttons marg">
								<p>
									<a href="{{ path('app_user_tabletab_edit', {'id': eventList.id, 'tabletab_id': tabletab.id}) }}">
										<i class="icon fa-solid fa-pen"></i>
									</a>
								</p>
								<p>{{ include('user_tabletab/_delete_form.html.twig') }}</p>
							</div>
						</div>
						{% for guest in tabletab.guests %}
						<p class="item-parag table-item-parag">{{ guest.name }}</p>
						{% else %}
					    <p>aucun invité ajouté</p>
				        {% endfor %}
					</div>
				{% else %}
					<p>aucun table ajoutée</p>
				{% endfor %}
			</div>
		</div>
		<a href="{{ path('app_user_tabletab_new', {'id': eventList.id}) }}" class="btn btn-item">ajouter table</a>
	</div>
{% endblock %}
