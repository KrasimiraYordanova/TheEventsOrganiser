{% extends 'userbase.html.twig' %}

{% block title %}Event photos{% endblock %}

{% block body %}

    <section class="dashboard-container">
        <div class="items-container">
            <div class="items-container__item-space">
                <h2 class="items-container__item-title">Event photos</h2>
            </div>

            <div class="bkgrnd-block">

                <div class="event-photos">
                    {% for picture in pictures %}
                    <div class="event-photos__imgbox">
                        <p>{{ include('user_wedding/_delete_form.html.twig') }}</p>
                        <img class="event-photos__img" src="{{ asset('uploads/Wedding-Photos/'~ picture.namePath )}}" alt="wedding">
                    </div>
                    {% endfor %}
                </div>

            </div>
            {{ form_start(form, {'attr': {'class': 'event-photos__form'}}) }}
            {{ form_row(form.image) }}
            <button class="btn event-photos__btn">{{ button_label|default('Add to gallery') }}</button>
            {{ form_end(form) }}
        </div>
    </section>
    
{% endblock %}

